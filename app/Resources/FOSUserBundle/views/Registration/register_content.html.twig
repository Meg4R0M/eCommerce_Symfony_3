{% trans_default_domain 'FOSUserBundle' %}

<div class="container">

    <div class="columns">
        <div class="column is-12">
            <div class="tile is-ancestor">
                <div class="tile is-parent is-12">
                    <article class="tile is-child box is-12">
                        <h2 class="title is-3">Inscription</h2>
                    </article>
                </div>
            </div>
        </div>
    </div>

    <div class="columns">

        <div class="column is-6">
            <div class="tile is-ancestor">
                <div class="tile is-parent is-12">
                    <article class="tile is-child box is-12">
                        <h2 class="title is-3">Pas encore inscrit ?</h2>
                        <em>
                            Nous vous invitons à vous inscrire afin de profiter plainement des fonctionnalitées des notre site.
                            Ainsi vous pourrez profiter de toutes nos offres, passer commande et venir les retirer en magasin dans l'heure.
                        </em>
                    </article>
                </div>
            </div>
        </div>

        <div class="column is-6">
            <div class="tile is-ancestor">
                <div class="tile is-parent is-12">
                    <article class="tile is-child box is-12">
                        <h2 class="title is-3">Inscription</h2>
                        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                        {{ form_label(form.email, null, {'label_attr': {'class': 'label is-3'}}) }}
                        <p class="control has-icon">
                            {{ form_widget(form.email, { 'attr': {'class': 'input is-9'} }) }}
                            <i class="fa fa-envelope"></i>
                        </p>
                        {{ form_label(form.username, null, {'label_attr': {'class': 'label is-3'}}) }}
                        <p class="control has-icon">
                            {{ form_widget(form.username, { 'attr': {'class': 'input is-9'} }) }}
                            <i class="fa fa-user"></i>
                        </p>
                        {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'label is-3'}}) }}
                        <p class="control has-icon">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'input is-9'} }) }}
                            <i class="fa fa-lock"></i>
                        </p>
                        {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'label is-3'}}) }}
                        <p class="control has-icon">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'input is-9'} }) }}
                            <i class="fa fa-lock"></i>
                        </p>
                        <br />
                        <div class="has-text-right">
                            <input class="button button-vert" type="submit" value="{{ 'registration.submit'|trans }}" />
                        </div>
                        {{ form_end(form) }}
                    </article>
                </div>
            </div>
        </div>

    </div>
</div>