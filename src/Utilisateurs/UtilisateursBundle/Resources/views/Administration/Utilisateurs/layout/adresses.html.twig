{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Utilisateur adresses</h1>

    {% for adresse in utilisateur.adresses %}
        <div class="span12">
            <div class="span4">
                <h4>Adresse {{ loop.index }} :</h4>
                {{ adresse.prenom }} {{ adresse.nom }}
                <br />{{ adresse.adresse }},
                <br />{{ adresse.cp }} {{ adresse.ville }}
                <br />{{ adresse.pays }}
                <br /><br />
            </div>
        </div>
    {% endfor %}

{% endblock %}