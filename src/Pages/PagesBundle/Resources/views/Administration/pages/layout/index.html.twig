{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <div class="tile is-ancestor">
        <div class="tile is-parent is-12">
            <article class="tile is-child box is-12">
                <h2 class="title is-3 indieflower">Liste des Pages</h2>
            </article>
        </div>
    </div>

    <div class="tile is-ancestor">
        <div class="tile is-parent is-12">
            <article class="tile is-child box is-12">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.titre }}</td>
                            <td>
                                <a href="{{ path('adminPages_show', { 'id': entity.id }) }}"><i class="fa fa-eye"
                                                                                                aria-hidden="true"></i></a>
                                <a href="{{ path('adminPages_edit', { 'id': entity.id }) }}"><i
                                            class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('adminPages_new') }}" class="button button-vert is-outlined">nouvelle page</a>
                    </li>
                </ul>
            </article>
        </div>
    </div>
{% endblock %}