{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="columns">

            <div class="column is-3">
                {% include '::modulesUsed/navigation.html.twig' %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
                {% else %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateurs.html.twig' %}
                {% endif %}
                {{ render(controller('EcommerceBundle:Panier:menu')) }}
            </div>

            <div class="column is-9">
                {% if produits|length != 0 %}
                    <div class="tile is-ancestor">

                        {% for produit in produits %}
                            <div class="tile is-parent is-4">
                                <article class="tile is-child box is-12">
                                    <img src="{{ produit.image.AssetPath|imagine_filter('produitThumb') }}" alt="{{ produit.image.name }}" width="300" height="300">
                                    <div class="caption">
                                        <h4 class="title">{{ produit.nom }}</h4>
                                        <p class="has-text-right"><b>{{ produit.prix|tva(produit.tva.multiplicate) }}â‚¬</b></p>
                                        <a class="button is-default" href="{{ path('presentation', { 'id' : produit.id }) }}">Plus d'infos</a>
                                        {% if panier[produit.id] is not defined %}
                                            <a class="button is-default" href="{{ path('ajouter', { 'id' :  produit.id }) }}">Ajouter au panier</a>
                                        {% endif %}
                                    </div>
                                </article>
                            </div>
                            {% if loop.index is divisibleby(3) %}
                                </div><div class="tile is-ancestor">
                            {% endif %}
                        {% endfor %}

                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(produits) }}
                    </div>

                {% else %}
                    Aucun Produit
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}