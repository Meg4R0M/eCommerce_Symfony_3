{% extends "::layout/layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="columns">

            <div class="column is-3">
                {% include '::modulesUsed/navigation.html.twig' %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
                {% else %}
                    {% include 'UtilisateursBundle:Default:modulesUsed/utilisateurs.html.twig' %}
                {% endif %}
                {{ render(controller('EcommerceBundle:Panier:menu')) }}
            </div>

            {% if produits|length != 0 %}
                <div class="column is-9">
                    <div class="tile is-ancestor">

                        {% for produit in produits %}
                            <div class="tile is-parent is-4">
                                <article class="tile is-child box is-12">
                                    <img src="{{ produit.image.AssetPath|imagine_filter('produitThumb') }}" alt="{{ produit.image.name }}" width="300" height="300">
                                    <div class="caption">
                                        <h4 class="title is-4 minheight40px indieflower">{{ produit.nom }}</h4>
                                        <p class="has-text-right is-5 indieflowerprix"><b>{{ produit.prix|tva(produit.tva.multiplicate) }}â‚¬/100Gr</b></p>
                                        <br />
                                        <div class="control is-grouped">
                                            <p class="control has-text-left">
                                                <a class="button button-vert is-outlined" href="{{ path('presentation', { 'id' : produit.id }) }}">Plus d'infos</a>
                                            </p>
                                            {% if panier[produit.id] is not defined %}
                                                <p class="control has-text-right">
                                                    <a class="button button-orange is-outlined" href="{{ path('ajouter', { 'id' :  produit.id }) }}">Ajouter au panier</a>
                                                </p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </article>
                            </div>
                            {% if loop.index is divisible by(3) %}
                                </div><div class="tile is-ancestor">
                            {% endif %}
                        {% endfor %}

                    </div>
                </div>
            </div>
                {% if '/produits/recherche' not in app.request.requestUri %}
                    <div class="column is-12">
                        <div class="navigation has-text-centered">
                            {{ knp_pagination_render(produits) }}
                        </div>
                    </div>
                {% endif %}

            {% else %}
                Aucun Produit
            {% endif %}

    </div>
{% endblock %}